      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://robot_description/meshes/a1.STL"/>
        </geometry>
        <material name="arm_orange"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://robot_description/meshes/a1.STL"/>
        </geometry>
      </collision>
    </link>

    <joint name="arm_base_joint" type="revolute">
      <xacro:insert_block name="origin"/>
